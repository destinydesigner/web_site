<div class="container">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-signin new_user"}) do |f| %>
<h2 class="form-signin-heading">Please sign in</h2>
<label type="email"><%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email address" %></label>
<label type="password"><%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %></label>
<% if devise_mapping.rememberable? -%>
    <label for="user_remember_me" class="checkbox">
        <%= f.check_box :remember_me %>Remember me
    </label>
<% end -%>

<div>
<%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>
</div>
<br />
<%= render "devise/shared/links" %>
<% end %>


</div> <!-- /container -->

