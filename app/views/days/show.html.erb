<table class="table table-hover table-condensed table-striped">
<thead>
    <tr>
        <th>
            <%= 'Day ' + @day.order.to_s + ':' + @day.section %>
        </th>
    </tr>
</thead>
<tbody>
    <% exercises_of_day @day.id %>
    <% @exercises.each do |e| %>
        <tr>
            <td>
                <%= e.name %>
            </td>
        </tr>
    <% end %>
</tbody>
</table>
