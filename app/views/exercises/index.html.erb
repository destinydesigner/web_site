<h1>Exercises</h1>

<table class="table table-hover table-condensed table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Annotation</th>
        </tr>
    </thead>
    <tbody>
    <% @exercises.each do |exercise| %>
        <tr>
            <td><%= exercise.id %></td>
            <td><%= link_to exercise.name, exercise %></td>
            <td><%= exercise.annotation %></td>
        </tr>
    <% end %>
    </tbody>
</table>

